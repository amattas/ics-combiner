# Authentication (optional for local/dev)
ICS_API_KEY=your-long-random-api-key
MD5_SALT=optional-salt

# Server
HOST=0.0.0.0
PORT=8080
DEBUG=false

# Redis (optional; if omitted, caching is disabled)
REDIS_HOST=your-redis-hostname
REDIS_SSL_PORT=6380
REDIS_KEY=your-redis-password

# ICS configuration
ICS_NAME=Combined Calendar
ICS_DAYS_HISTORY=14

# Example sources JSON (paste into ICS_SOURCES)
# [
#   {
#     "Id": 1,
#     "Url": "https://example.com/calendar1.ics",
#     "Prefix": "Work",
#     "MakeUnique": true,
#     "FilterDuplicates": false,
#     "PadStartMinutes": 15,
#     "Duration": 60,
#     "RefreshSeconds": 900
#   },
#   {
#     "Id": 2,
#     "Url": "https://example.com/calendar2.ics",
#     "Prefix": "Home",
#     "MakeUnique": false,
#     "FilterDuplicates": true,
#     "RefreshSeconds": 600
#   }
# ]
ICS_SOURCES=

# Cache TTL overrides
# Default TTL for any source without explicit RefreshSeconds
CACHE_TTL_ICS_SOURCE_DEFAULT=600
# Per‑calendar override (ID=2 ⇒ 120 seconds)
# CACHE_TTL_ICS_SOURCE_2=120
